{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "rootDir":"./",
        "outDir": "./server_build",
        "sourceMap": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "watch": true,
        "lib": [
            "dom","es2017"
        ]
    },
    "include": [
        "./server/**/*.ts",
        "./spec/**/*.ts"
    ],

    "exclude": [
        "server_build",
        "node_modules",
        "client/**/*"
    ]
}